@page
@model SignalRAssignment.Pages_Product.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1 style="text-align: center">Details of @Html.DisplayFor(model => model.Product.ProductName)</h1>

<div style="width: 50%; margin: auto">
    <dl class="row">
        <dt class="col-sm-6">
            @Html.DisplayNameFor(model => model.Product.ProductImage)
        </dt>
        <dd class="col-sm-6">
            <img src="@Model.Product.ProductImage" class="card-img-top" alt="@Model.Product.ProductImage">
        </dd>
        <dt class="col-sm-6">
            @Html.DisplayNameFor(model => model.Product.ProductName)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.Product.ProductName)
        </dd>
        <dt class="col-sm-6">
            @Html.DisplayNameFor(model => model.Product.QuantityPerUnit)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.Product.QuantityPerUnit)
        </dd>
        <dt class="col-sm-6">
            @Html.DisplayNameFor(model => model.Product.UnitPrice)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.Product.UnitPrice)
        </dd>
        <dt class="col-sm-6">
            @Html.DisplayNameFor(model => model.Product.Category)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.Product.Category.CategoryName)
        </dd>
        <dt class="col-sm-6">
            @Html.DisplayNameFor(model => model.Product.Supplier)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(model => model.Product.Supplier.CompanyName)
        </dd>
    </dl>
    <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.Product?.ProductId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
